@model Shared.Domains.Transactions.Models.TransactionsModel

@{
    ViewData["Title"] = "Delete Account";
}

<h2>Are you sure you want to delete this account?</h2>

<div>
    <p><strong>Account Code:</strong> @Model.Account_Code</p>
    <p><strong>Transaction Date:</strong> @Model.Transaction_Date</p>
    <p><strong>Capture Date:</strong> @Model.Capture_Date</p>
    <p><strong>Outstanding Balance:</strong> @Model.Amount</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Code" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
