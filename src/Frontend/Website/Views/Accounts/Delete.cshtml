@model Shared.Domains.Accounts.Models.AccountsModel

@{
    ViewData["Title"] = "Delete Account";
}

<h2>Are you sure you want to delete this account?</h2>

<div>
    <p><strong>Code:</strong> @Model.Code</p>
    <p><strong>Person Code:</strong> @Model.Person_Code</p>
    <p><strong>Account Number:</strong> @Model.Account_Number</p>
    <p><strong>Outstanding Balance:</strong> @Model.Outstanding_Balance</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Code" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
