@model Shared.Domains.Persons.Models.PersonsModel

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Are you sure you want to delete this person?</h2>

<div>
    <p><strong>Code:</strong> @Model.Code</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Surname:</strong> @Model.Surname</p>
    <p><strong>ID Number:</strong> @Model.Id_Number</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Code" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
